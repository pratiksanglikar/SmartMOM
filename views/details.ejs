        .demo-section * + h4 {
            margin-top: 2em;
        }

        .demo-section .k-tabstrip .k-content
        {
            height: 140px;
        }

    </style>
    <script>
        $(document).ready(function () {
            $("#tabstrip-left").kendoTabStrip({
                tabPosition: "left",
                animation: { open: { effects: "fadeIn" } }
            });

            $("#tabstrip-right").kendoTabStrip({
                tabPosition: "right",
                animation: { open: { effects: "fadeIn" } }
            });

            $("#tabstrip-bottom").kendoTabStrip({
                tabPosition: "bottom",
